<resources>
    <style name="Theme.MyColors" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#ffaaaa</item>
        <item name="colorSurface">@color/almost_black</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?textColorAlertDialogListItem</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?textColorAlertDialogListItem</item>
    </style>

    <style name="Theme.BookWishlist" parent="Theme.MyColors">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?colorPrimary</item>
    </style>
</resources>
